extends _baseEmail

block content
  p #{fistName},
    p Welcome to #{appName}, we're glad to have you 🎉🙏
    p We believe you forgot your password. Do not worry. Click on the link below to generate a new password for your profile.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    a(href=`${url}`, target='_blank') Reset you password
    p If you need any help with booking your next tour, please don't hesitate to contact me!
    p - #{fromName}